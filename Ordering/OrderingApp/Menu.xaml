        <Label Name="lbl_slash" Content="/" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="35" Margin="394,470,0,0" VerticalAlignment="Top" Width="40" FontSize="36" FontFamily="Tekton Pro Cond"/>


