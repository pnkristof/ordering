            <CheckBox Content="Gyros" HorizontalAlignment="Left" Margin="162,73,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Name="cb_gyros" Foreground="Black" BorderBrush="#FF3B587A" FontSize="14" IsChecked="True"/>
